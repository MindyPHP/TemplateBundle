<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mindy.template.base_path">%kernel.root_dir%/Resources</parameter>
        <parameter key="mindy.template.dir">templates</parameter>
        <parameter key="mindy.template.theme">default</parameter>
    </parameters>

    <services>
        <defaults autowire="false" autoconfigure="false" public="true" />

        <service id="template" alias="templating.engine.mindy">
            <deprecated>The "%service_id%" service is deprecated since Mindy 3.7.0.21
                and will be removed in 4.0.</deprecated>
        </service>

        <service id="templating.engine.mindy" class="Mindy\Template\Renderer">
            <argument key="$options" type="collection">
                <argument key="source" type="expression">container.get('template.finder.chain').getPaths()</argument>
                <argument key="target">%kernel.cache_dir%/templates</argument>
                <argument key="mode">0</argument>
                <argument key="autoEscape">true</argument>
            </argument>
        </service>

        <service id="template.finder.templates" class="Mindy\Finder\TemplateFinder">
            <argument key="$basePath">%mindy.template.base_path%</argument>
            <argument key="$templatesDir">%mindy.template.dir%</argument>
        </service>

        <service id="template.finder.bundles" class="Mindy\Finder\BundlesTemplateFinder">
            <argument key="$bundlesDirs" type="collection"/>
            <argument key="$templatesDir">%mindy.template.dir%</argument>
        </service>

        <service id="template.finder.theme" class="Mindy\Finder\ThemeTemplateFinder">
            <argument key="$basePath">%kernel.root_dir%/Resources</argument>
            <argument key="$theme">%mindy.template.theme%</argument>
            <argument key="$templatesDir">%mindy.template.dir%</argument>
        </service>

        <service id="template.finder.chain" class="Mindy\Finder\ChainTemplateFinder">
            <argument key="$finders" type="collection">
                <argument type="service" id="template.finder.templates" />
            </argument>
        </service>

        <service id="template.variable_provider.app" class="Mindy\Bundle\TemplateBundle\VariableProvider\AppVariableProvider">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <tag name="template.variable_provider" />
        </service>
    </services>
</container>
